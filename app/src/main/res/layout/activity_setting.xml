<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.Setting">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        app:srcCompat="@drawable/imageback"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-1dp">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="75dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:text="    ＜返回"
            android:textAlignment="textStart"
            android:textColor="@drawable/button_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/settingtext"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:background="@drawable/out_line"
            android:paddingTop="15dp"
            android:text="⊙關於我們⊙"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/version_textView3"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/buttonshape"
                android:paddingTop="0dp"
                android:text="⊙版本⊙ "
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="V1.0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/according_textView4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/buttonshape"
                android:padding="0dp"
                android:text="⊙參考資料⊙"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_datasource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="政府開放平台"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/engineer_textView5"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/buttonshape"
                android:padding="0dp"
                android:text="⊙開發人員⊙"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_engineer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="謝淳宇\n曾弘軒\n黃信銓"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/question_textView6"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/buttonshape"
                android:padding="0dp"
                android:text="⊙感謝⊙"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_thank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="感謝各位使用者的支持，正是由於各位寶貴的意見和反饋，才能使這個APP在細節中不斷精益求精。也感謝陳錫民老師這段時間以來的指導，才能完成這麼一支實用且有幫助的APP。"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
