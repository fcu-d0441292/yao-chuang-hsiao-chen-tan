<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.myapplication.Detail">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="381dp"
        android:layout_height="513dp"
        android:scaleType="center"
        app:srcCompat="@drawable/imageback"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="-6dp" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="2dp">

        <Button
            android:id="@+id/BackButton_Detail"
            android:layout_width="67dp"
            android:layout_height="29dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:padding="0dp"
            android:paddingLeft="0dp"

            android:shadowColor="@android:color/transparent"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="   ＜返回"
            android:textAlignment="textStart"
            android:textColor="@drawable/button_text_color" />

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/out_line"
            android:padding="25dp"
            android:paddingTop="15dp"
            android:text="SK-II 保濕乳液"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="⊙公司名稱⊙"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ComNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="樓華特公司"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="⊙違反情節⊙"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DetailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1.成分標示不清\n2.售價過高"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="⊙處分法條⊙"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LawText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="第 3 條 政第 3 條 政府為達成本法目的，應實施下列措施，並應就與下列事項有關之法規及 其執行情形，定期檢討、協調、改進之： 一、維護商品或服務之品質與安全衛生。府為達成本法目的，應實施下列措施，並應就與下列事項有關之法規及 其執行情形，定期檢討、協調、改進之： 一、維護商品或服務之品質與安全衛生。"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="⊙處分日期⊙"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LawDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="2018 / 1 / 05"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
